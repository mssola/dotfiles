[core]
  editor = emacsclient-a-nw
  excludesfile = ~/.gitignore
  whitespace = trailing-space,space-before-tab
  abbrev = 12

[help]
  autocorrect = 1

[http]
  sslVerify = true

[alias]
  a = commit -a -s -v
  down = pull --rebase --stat

[format]
  signoff = true

[push]
  default = matching

[apply]
  whitespace = fix

[color]
  ui = true

[merge]
  tool = vimdiff

[init]
  defaultBranch = main

[commit]
    gpgsign = true
