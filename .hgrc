[ui]
username = Miquel Sabaté Solà <mikisabate@gmail.com>
ignore = ~/.hgignore

[hooks]
preupdate = hg status --rev .:$HG_PARENT1

[alias]
show = log -pr
down = !$HG pull --rebase; $HG update
blame = annotate --user -c

[pager]
pager = LESS='FSRX' less

[extensions]
pager =
color =
rebase =
shelve =
progress =

[color]
status.added = green
status.modified = red
status.removed = red
status.deleted = red
status.unknown = blue bold
